#!/usr/bin/env bash
set -euo pipefail

if command -v powershell.exe >/dev/null 2>&1 && grep -qi microsoft /proc/version 2>/dev/null; then
	powershell.exe -command "Get-Clipboard" | tr -d '\r'
elif command -v xclip >/dev/null 2>&1; then
	xclip -selection clipboard -o
elif command -v wl-paste >/dev/null 2>&1; then
	wl-paste
else
	echo 'cannot find a paste program' >&2
	exit 1
fi
